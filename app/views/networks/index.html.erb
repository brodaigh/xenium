<table cellspacing="0">
	<caption>Networks</caption>
  <tr>
    <th>Name</th>
    <th>Network address</th>
    <th>Netmask</th>
    <th># Used</th>
    <th># Remaining</th>
    <th></th>
    <th></th>
  </tr>

<% for network in @networks %>
  <tr>
    <td><%= link_to h(network.name), network_path(network) %></td>
    <td><%=h network.network_address %></td>
    <td><%=h network.netmask %></td>
    <td><%=link_to h(network.ips.count), network_ips_path(network) %></td>
    <td><%=h network.remaining_ips %></td>
    <td><%= link_to 'Edit', edit_network_path(network) %></td>
    <td><%= link_to 'Destroy', network, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

